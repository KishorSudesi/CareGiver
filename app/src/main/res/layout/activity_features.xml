<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/app_header">

    <include
        android:id="@+id/header"
        layout="@layout/header_common"
        />

    <include
        android:id="@+id/include_header_my_tasks"
        layout="@layout/feature_list_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/colorful_textview"/>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="@dimen/margin_general"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtActivityName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/blue"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_general"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtActivityTime"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_general"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/loadingPanel"
            style="@style/GenericProgressBackground"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/margin_general"
            android:visibility="gone">

            <ProgressBar style="@style/GenericProgressIndicator" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/milestoneLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="@dimen/padding_general" />

        <include
            android:id="@+id/include_footer_task"
            layout="@layout/footer_task_detail_attach"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
          >

            <Button
                android:id="@+id/buttonClose"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/margin_general"
                android:layout_weight="1"
                android:background="@color/color_common"
                android:gravity="center"
                android:text="@string/close"
                android:textColor="@color/colorWhite"
                android:visibility="gone" />

            <Button
                android:id="@+id/buttonVegetibleDone"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/button_success"
                android:gravity="center"
                android:text="@string/upload_button"
                android:textSize="20sp"
                android:textColor="@color/colorWhite" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
