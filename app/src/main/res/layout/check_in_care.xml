<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/includeHeaderCreatingTasks"
        layout="@layout/header_common" />

    <TextView
        android:id="@+id/textViewHeaderCreatingTask"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="@string/check_in_care"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/new_blue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/colorful_textview"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:gravity="center">

            <com.hdfc.views.RoundedImageView
                android:id="@+id/clientimg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/person_icon"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/clientnametxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/imgLogoHeaderTaskDetail"
                android:layout_toRightOf="@+id/imgLogoHeaderTaskDetail"
                android:gravity="center"
                android:textColor="@color/blue"
                android:textSize="20dp" />

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/colorful_textview"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_margin="10dp"
                android:text="Home essentials"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:weightSum="1">
            <TextView
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:gravity="left"
                android:text="Utility Bills"
                android:layout_weight="0.5"
                android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/utilitystatus"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:layout_weight="0.5"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/header_gradient"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:gravity="left|center"
                    android:padding="5dp"
                    android:text="Types of bills"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Paid Y/N"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Due Date"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Status"
                    android:textSize="12sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Water/Property tax" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Paid Y/N" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/water_propertytxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="Due Date" />

                    <ImageView
                        android:id="@+id/pick_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/date_picker" />
                </LinearLayout>

                <TextView
                    android:id="@+id/waterstatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Status" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Gas" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Paid Y/N" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/gastxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="Due Date" />

                    <ImageView
                        android:id="@+id/pick_date2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/date_picker" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gasstatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Status" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Electricity" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Paid Y/N" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/electricitytxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="Due Date" />

                    <ImageView
                        android:id="@+id/pick_date3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/date_picker" />
                </LinearLayout>

                <TextView
                    android:id="@+id/electricitystatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Status" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Telephone/Mobile" />

                <Spinner
                    android:id="@+id/spinner3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Paid Y/N" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:background="@drawable/one_side_border"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/telephonetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:text="Due Date" />

                    <ImageView
                        android:id="@+id/pick_date4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/date_picker" />
                </LinearLayout>

                <TextView
                    android:id="@+id/telephonestatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@drawable/one_side_border"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="10sp"
                    android:text="Status" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:layout_margin="10dp"
                android:text="Kitchen Equipments"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:text="Kitchen Equipments" />

                <EditText
                    android:id="@+id/kitchen_equipments"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLength="80"
                    android:padding="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left"
                android:layout_margin="10dp"
                android:text="Grocery"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:text="Grocery" />

                <EditText
                    android:id="@+id/grocery"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLength="80"
                    android:padding="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:weightSum="1"
                android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_weight="0.7"
                android:text="Equipment working status"
                android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:id="@+id/equipmentstatus"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:layout_weight="0.3"
                    android:textSize="15sp"
                    android:visibility="gone"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="Electronics" />
                
                <CheckBox
                    android:id="@+id/electrocheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

                <EditText
                    android:id="@+id/electronics"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLength="80"
                    android:padding="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="Home Appliances" />

                <CheckBox
                    android:id="@+id/homecheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

                <EditText
                    android:id="@+id/homeapplience"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLength="80"
                    android:padding="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="left|center"
                    android:textSize="15sp"
                    android:padding="10dp"
                    android:text="Automobile" />

                <CheckBox
                    android:id="@+id/autocheck"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"/>

                <EditText
                    android:id="@+id/automobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLength="80"
                    android:padding="10dp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_margin="10dp"
                android:text="Domestic Help Status"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:gravity="left|center"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="Maid Services" />

                <EditText
                    android:id="@+id/maidservices"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:maxLength="80"
                    android:padding="10dp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="left"
                android:layout_margin="10dp"
                android:text="Upload Media"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/header_gradient"
               >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/buttonHallAdd"
                    android:text="Hall"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/buttonHallAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/add_icon" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/header_gradient"
                android:orientation="horizontal">

                <include
                    android:id="@+id/include_hall_task"
                    layout="@layout/attach_hall_task_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/header_gradient"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/buttonKitchenAdd"
                    android:text="Kitchen"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/buttonKitchenAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/add_icon" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/header_gradient"
                android:orientation="horizontal">

                <include
                    android:id="@+id/include_hall_task"
                    layout="@layout/attach_kitchen_task_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/header_gradient"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/buttonWashroomAdd"
                    android:text="Washroom"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/buttonWashroomAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/add_icon" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/header_gradient"
                android:orientation="horizontal">

                <include
                    android:id="@+id/include_hall_task"
                    layout="@layout/attach_washroom_task_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:background="@drawable/header_gradient"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_toLeftOf="@+id/buttonBedroomAdd"
                    android:text="Bedroom"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <Button
                    android:id="@+id/buttonBedroomAdd"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@drawable/add_icon" />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/header_gradient"
                android:orientation="horizontal">

                <include
                    android:id="@+id/include_hall_task"
                    layout="@layout/attach_bedroom_task_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_success"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="Submit"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginBottom="5dp">

            </LinearLayout>




        </LinearLayout>
        </ScrollView>

</LinearLayout>
