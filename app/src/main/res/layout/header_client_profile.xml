<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="350dp"
    android:background="@drawable/app_bg">


    <include
        android:id="@+id/include_header_clients"
        layout="@layout/newzeal_header"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"/>

    <include
        android:id="@+id/includeHeaderClients"
        layout="@layout/header_client_details"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/include_header_clients"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/includeHeaderClients"
        android:background="@drawable/colorful_textview"/>
   <!-- <ImageView
        android:id="@+id/imgBackArrow"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
      android:layout_below="@+id/includeHeaderClients"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:src="@mipmap/back" />-->

    <ImageView
        android:id="@+id/imgPen"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/include_header_clients"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/includeHeaderClients"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageClientProfile"
           android:layout_width="96dp"
           android:layout_height="96dp"
           android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textViewClientProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/edit_text_margin"
            android:layout_marginTop="@dimen/margin_general"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>