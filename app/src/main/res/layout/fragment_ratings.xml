<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_header">

        <RelativeLayout
            android:id="@+id/toplayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/blue">
            <!-- <ImageButton
                 android:id="@+id/buttonBack"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginLeft="10dp"
                 android:layout_marginTop="20dp"
                 android:background="@drawable/backarrow"
                 android:visibility="visible" />-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:background="@color/blue"
                android:src="@drawable/logo1" />

        </RelativeLayout>


        <TextView
            android:id="@+id/textViewFeedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toplayout"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="@string/feedback"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/notificationButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/toplayout"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/desktop_notification" />

        <Button
            android:id="@+id/buttonlogout"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toplayout"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/account_type"
            android:textAllCaps="false"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        <ImageView
            android:id="@+id/imageViewLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/textViewFeedback"
            android:background="@color/color_common"
            android:padding="15dp" />

        <LinearLayout
            android:id="@+id/linearLayoutUserRatings"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/imageViewLine"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.hdfc.views.RoundedImageView
                android:id="@+id/img"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="0.5"
                android:paddingTop="12dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:paddingLeft="35dp"
                    android:text="User Ratings" />

                <LinearLayout
                    android:id="@+id/linearLayoutRatings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:text="Service Giver Name"
                    android:textSize="24dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linearLayoutUserRatings"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="@string/noFeedbacks"
            android:visibility="visible" />

        <ListView
            android:id="@+id/listViewRatings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayoutUserRatings"
            android:layout_margin="10dp"
            android:divider="@color/blue"
            android:dividerHeight="1dp">

        </ListView>

    </RelativeLayout>


</FrameLayout>