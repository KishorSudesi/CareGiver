<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/signOut">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <include
            android:id="@+id/include_header_my_profile"
            layout="@layout/header_my_profile"/>

            <RelativeLayout
                android:id="@+id/item_client_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/include_header_my_profile"
                android:layout_marginTop="15dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_horizontal_margin">

                <ImageView
                    android:id="@+id/imgEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/editTextName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/mail" />

                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewMobile"
                    android:layout_alignParentTop="true"
                    android:layout_alignStart="@+id/textViewMobile"
                    android:text="@string/name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/secondary_text_dark" />

                <EditText
                    android:id="@+id/editTextName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewEmail"
                    android:layout_alignStart="@+id/textViewEmail"
                    android:layout_below="@+id/textViewEmail"
                    android:layout_marginTop="7dp"
                    android:background="@color/background"
                    android:inputType="textEmailAddress" />

                <ImageView
                    android:id="@+id/imgMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/editTextMobile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/call"
                    />

                <TextView
                    android:id="@+id/textViewMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextName"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_toRightOf="@+id/imgMobile"
                    android:text="@string/mobNo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/secondary_text_dark" />

                <EditText
                    android:id="@+id/editTextMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewEmail"
                    android:layout_alignStart="@+id/textViewEmail"
                    android:layout_below="@+id/textViewMobile"
                    android:layout_marginTop="7dp"
                    android:background="@color/background"
                    android:inputType="phone"
                    android:maxLength="10" />

                <ImageView
                    android:id="@+id/imgPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/editTextPlace"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/location"
                   />

                <TextView
                    android:id="@+id/textViewPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextMobile"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:layout_toRightOf="@+id/imgPlace"
                    android:text="@string/place"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/secondary_text_dark" />

                <EditText
                    android:id="@+id/editTextPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textViewPlace"
                    android:layout_alignStart="@+id/textViewPlace"
                    android:layout_below="@+id/textViewPlace"
                    android:layout_marginTop="7dp"
                    android:background="@color/background"
                    android:inputType="text" />

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/signOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/color_common"
        android:text="@string/signOut"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
