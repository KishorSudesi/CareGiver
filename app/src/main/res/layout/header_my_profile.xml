<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_gradient">

    <ImageView
        android:id="@+id/imgBackArrow"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:src="@mipmap/back" />

    <ImageView
        android:id="@+id/imgPen"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:src="@mipmap/edit" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgPen"
        android:orientation="vertical">

        <com.hdfc.views.RoundedImageView
            android:id="@+id/imageMyProfile"
            android:layout_width="96dp"
            android:layout_height="96dp"

            android:layout_below="@+id/imgPen"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textViewMyProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/edit_text_margin"
            android:layout_marginTop="@dimen/margin_general"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

    </LinearLayout>

</RelativeLayout>