<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/app_header">

        <include
            layout="@layout/header_login"
            />

        <include
            android:id="@+id/include_header_clients"
            layout="@layout/header_clients"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/colorful_textview"/>

        <TextView
            android:id="@android:id/empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/noClients"
            android:visibility="gone" />

        <ExpandableListView
            android:id="@+id/listExp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

</LinearLayout>
