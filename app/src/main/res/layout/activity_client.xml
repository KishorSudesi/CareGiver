<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE">

    <include
        android:id="@+id/includeHeaderClients"
        layout="@layout/header_clients"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentTop="true"/>

    <ListView
        android:id="@+id/listViewClientsActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/includeHeaderClients"/>

    <include
        android:id="@+id/includeDashboardFooter"
        layout="@layout/dashboard_footer_menu"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>